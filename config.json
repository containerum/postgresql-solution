{
  "env": {
    "PG_IMAGE": "postgres",
    "PG_PORT": "5432",
    "PG_DEPLOY_NAME": "solution-pg",
    "PG_SVC_NAME": "solution-pg-svc",
    "POSTGRES_USER": "postgres",
    "PGDATA": "/pgdata"
  },
  "compile":{
     "PG_DEPLOY_HASH": "$RANDOM_5$",
     "PG_SVC_HASH": "$RANDOM_5$",
     "POSTGRES_PASSWORD": "$RANDOM_8$"
  },
  "run":[
    {
      "type": "deployment",
      "config_file": "deploy-pg.json"
    },
    {
      "type": "service",
      "config_file": "service-pg.json"
    }  
  ]
}
